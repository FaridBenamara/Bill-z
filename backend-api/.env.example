# ============================================
# Bill'z API - Configuration
# ============================================

# Application
APP_NAME=Bill'z API
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database PostgreSQL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/billz

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Supabase (optionnel - Pour stockage sur S3)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Groq API (requis pour les agents IA)
GROQ_API_KEY=gsk_your-groq-api-key-here
MODEL_NAME_analyse=llama-3.3-70b-versatile
(optionnel - pour OCR images)
# MISTRAL_API_KEY=your-mistral-api-key
# MODEL_NAME_extract=pixtral-12b-2024-09-18

# ============================================
# Notes
# ============================================
# 1. Copiez ce fichier vers .env et remplissez les valeurs
# 2. Ne commitez JAMAIS le fichier .env
# 3. Pour Gmail OAuth, placez credentials.json dans backend-api/
# 4. Le token.json sera généré automatiquement après la première connexion Gmail
